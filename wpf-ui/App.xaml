<Application x:Class="wpf_ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wpf_ui"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#c0c0c0"/>
        <SolidColorBrush x:Key="ButtonColor" Color="#c0c0c0"/>
        <SolidColorBrush x:Key="LineColor" Color="#2f4f4f"/>
        <SolidColorBrush x:Key="TextColor" Color="#4c5762"/>
    </Application.Resources>
</Application>
